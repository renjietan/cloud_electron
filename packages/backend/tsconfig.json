{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "config/**/*.ts",
    "config/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "entities/**/*.ts",
    "entities/**/*.d.ts"
  ]
}
